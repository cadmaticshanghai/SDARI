search_model(item, event_type, button_value)
{   
	/* Get the hvac support group */
	temp_list = PM_INIT_SET();
    query = PM_INIT_QUERY("GROUP");
	groups = PM_EXECUTE_QUERY(query);
	if (!ISINT(groups)){
		group_number = PM_NR_MEMBERS_IN_SET(groups);
		for (i = 0; i < group_number; i = i + 1;){
			group_handle = PM_GET_MEMBER_IN_SET(groups, i);
			group_type = PM_GET_OBJDATA(group_handle, 0, MMT_TAG_GROUPTYPE);
			/* Get rid of other type group*/
 			if (group_type == Group_Type){
				/* 过滤不包含零件的组Get rid of group that content nothing */	
				parts = PM_GET_OBJECTS_IN_GROUP(group_handle);
				if (parts != 0){
					part_number = PM_NR_MEMBERS_IN_SET(parts);
					if (part_number !=0){
					    /* 将管支架的handle保存到全局数组 */
						result = PM_ADD_OBJECT_TO_SET(group_handle,temp_list);
					}
				}
			}			
		}
	}
	
	model_number = PM_NR_MEMBERS_IN_SET(temp_list);
	if (model_number <= 0){
		return 0;
	}
	
	filter_model(temp_list);
		
	/* put the result to the array 'Support_List' */
    PM_FREE_SET(Support_List);
    Support_List = PM_INIT_SET();		
	Support_List = PM_COPY_SET(temp_list); 	

	Support_Number = PM_NR_MEMBERS_IN_SET(Support_List);
	if (Support_Number <= 0){
		PM_FREE_SET(temp_list);
		return 0;
	}
	
	PM_FREE_SET(temp_list);
	/* get support information and publish to grid */
	get_report_info();
	publish_model_info();
}

filter_model(models)
{
	/* 获取过滤条件 Get filter conditions*/
	block_name = W_GET_PANELITEM_ARG(Block_Name, W_PANEL_VALUE);
    outfit_area = W_GET_PANELITEM_ARG(OutfitArea, W_PANEL_VALUE);
	planning_unit = W_GET_PANELITEM_ARG(PlanningUnit, W_PANEL_VALUE);
    support_name = W_GET_PANELITEM_ARG(SupportName, W_PANEL_VALUE);
	temp = PM_INIT_SET();
	
	/* 过滤掉不符合条件的模型 */
	support_number = PM_NR_MEMBERS_IN_SET(models);
	for (i = 0; i < support_number; i = i + 1;){
		support_handle = PM_GET_MEMBER_IN_SET(models, i);	
        /*测试发现，需要将语句执行2次才能抽取分段号*/
        value = PM_GET_OBJDATA(support_handle,0,MMT_TAG_OBJECT_IN_BLOCK);
        value = PM_GET_OBJDATA(support_handle,0,MMT_TAG_OBJECT_IN_BLOCK);
        if(ISSTRING(value)){
            model_block_name = value;
            /* U_MESSAGE("model_block_name="+model_block_name);	 */
        }
        else{
            model_block_name = "*";
        }

        value = PM_GET_OBJDATA(support_handle,0,Outfit_Area);
        if(ISSTRING(value)){
            model_outfit_area = value;
            /* U_MESSAGE("model_outfit_area="+model_outfit_area);	 */
        }	
        else{
            model_outfit_area = "*";
        }
        
        value = PM_GET_OBJDATA(support_handle,0,Planning_Unit);
        if(ISSTRING(value)){
            model_planning_unit = value;
            /* U_MESSAGE("model_planning_unit="+model_planning_unit);	 */
        }	
        else{
            model_planning_unit = "*";
        }

        value = PM_GET_OBJDATA(support_handle,0,"nam");
        if(ISSTRING(value)){
            group_name = value;
            /* U_MESSAGE("group_name="+group_name); */
		}	
		else{
            group_name = "*";
		}

        check_block = PATTERN_MATCH(model_block_name, block_name);
        check_outfit_area = PATTERN_MATCH(model_outfit_area, outfit_area);
		check_planning_unit = PATTERN_MATCH(model_planning_unit, planning_unit);
		check_name =  PATTERN_MATCH(group_name,support_name);
		if(check_block & check_outfit_area & check_planning_unit & check_name){	
		    PM_ADD_OBJECT_TO_SET(support_handle,temp);
	    }				
	}
	PM_SETOP_SUB(models,models);
	PM_SETOP_OR(models,temp);
	PM_FREE_SET(temp);
	return(0);
}

options_selected(item, event_type, dummy)

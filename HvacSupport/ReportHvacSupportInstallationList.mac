/*
**get information of support stored in array 'Support_List' and save in array 'ReportInfo'；
*/
get_report_info()
{
    /*define a temperary array for report information*/
	report = alloc_2darray(2000,Report_Column_Number);
	supports = A_ALLOC(2000);
	parts = alloc_2darray(2000,2);
	row_number = 0;
	for (i = 0; i < Support_Number; i = i + 1;){
		support = PM_GET_MEMBER_IN_SET(Support_List, i);		
		/* get support information and save to local array */
		get_support_info(support, report, row_number, supports, parts);
	}	
	/*save report information to global array*/
	Report_Row_Number = row_number;
    free_2darray(Report_Info);    
    Report_Info = alloc_2darray(Report_Row_Number,Report_Column_Number);
    A_FREE(Report_Objects);
    Report_Objects = A_ALLOC(Report_Row_Number);
	for(i=0;i<row_number;i=i+1;){
        for(j=0;j<Report_Column_Number;j=j+1;){
	      value = get_2darray(report,i,j);
	      put_2darray(Report_Info, i, j, value);	
        }
        support = A_GET(supports,i);
        A_PUT(Report_Objects,i,support);
	}
	A_FREE(supports);
	
    frame_number = 0;
	frames = alloc_2darray(Report_Row_Number,Report_Column_Number-2);
	for(i=0;i<Report_Row_Number;i=i+1;){
        part_item = get_2darray(parts,i,0);
        part_id =   get_2darray(parts,i,1);
        part_des =  get_2darray(report,i,4);
        /*Summary of frame material*/
        if(part_item == "1"){
            if(frame_number == 0){
                put_2darray(frames,0,0,part_id);
                for(j=3;j<Report_Column_Number;j=j+1;){
                    value = get_2darray(report,i,j);
                    put_2darray(frames,0,j-2,value);
                }
                frame_number = frame_number + 1;
            }
            else{
                check = 0;
                for(k=0;k<frame_number;k=k+1;){
                    part_id0 = get_2darray(frames,k,0);
                    if(part_id0 == part_id){
                        check = 1;
                        length = String_To_Float(get_2darray(report,i,5)) + String_To_Float(get_2darray(frames,k,3));
                        length_s = "";
                        S_PRINTF(length_s, "%.2f", length);
                        put_2darray(frames,k,3,length_s);
                        weight = String_To_Float(get_2darray(report,i,7)) + String_To_Float(get_2darray(frames,k,5));
                        weight_s = "";
                        S_PRINTF(weight_s, "%.2f", weight);
                        put_2darray(frames,k,5,weight_s);	               
                    }
                }
                if(!check){
                    put_2darray(frames,frame_number,0,part_id);
                    for(j=3;j<Report_Column_Number;j=j+1;){
                        value = get_2darray(report,i,j);
                        put_2darray(frames,frame_number,j-2,value);
                    }
                frame_number = frame_number + 1;	                 
                }	         	         
            }	      
        }
	}
	free_2darray(Summary);	
	Total_Number = frame_number;
	Summary = alloc_2darray(Total_Number,Report_Column_Number-2);
	temp_number = 0;
	for(i=0;i<frame_number;i=i+1;){
        put_2darray(Summary,temp_number,0,"合计");
        for(j=1;j<Report_Column_Number-2;j=j+1;){
            value = get_2darray(frames,i,j);
            put_2darray(Summary,temp_number,j,value);
        }
        temp_number = temp_number + 1;
	} 

	free_2darray(parts);
	free_2darray(frames);
	free_2darray(report);	
	return(0);
}

/*get support part information*/
get_support_info(support,report,row_number,supports,parts)
{
    supp_parts = PM_GET_OBJECTS_IN_GROUP(support);
    part_number = PM_NR_MEMBERS_IN_SET(supp_parts);
    /*record part information in array*/
    support_parts = alloc_2darray(part_number,5);
    /*
    --0.  string   part number of part
    --1.  string   part id 
    --2.  string   part description
    */        
    for(i=0;i<part_number;i=i+1;){
        part = PM_GET_MEMBER_IN_SET(supp_parts,i);
        part_id = PM_GET_OBJDATA(part,0,MMT_TAG_PARTID);
        item_no = PM_GET_OBJDATA(part,0,Part_Number);
        if(ISSTRING(item_no)){
            put_2darray(support_parts,i,0,item_no);        
        }
        else{
            put_2darray(support_parts,i,0,"2-");
        }
        put_2darray(support_parts,i,1,part_id);
        description = get_part_description(part);
        put_2darray(support_parts,i,2,description);
    }   

    /*summary materail*/
    flame_no = 1000;
    mto_no = 0;
    mto_info = alloc_2darray(part_number,5);
    for(i=0;i<part_number;i=i+1;){
        item_no = get_2darray(support_parts,i,0);
        flag = HEAD(item_no,1);
        if(flag == "1"){
            if(flame_no == 1000){
                flame_no = mto_no;
                put_2darray(mto_info,mto_no,0,flag);
                for(j=1;j<5;j=j+1;){
                    value = get_2darray(support_parts,i,j);
                    put_2darray(mto_info,mto_no,j,value);
                }
                mto_no = mto_no + 1;
            }
        }
    }
    free_2darray(support_parts);
   
    block = "Unset";
    /*测试发现需要将语句执行2次才能提取到数据*/
    value = PM_GET_OBJDATA(support,0,MMT_TAG_OBJECT_IN_BLOCK);
    value = PM_GET_OBJDATA(support,0,MMT_TAG_OBJECT_IN_BLOCK);
    if(ISSTRING(value)){
        block = value;
    }
    
    outfit_area = "Unset";
    value = PM_GET_OBJDATA(support,0,Outfit_Area);
    if(ISSTRING(value)){
        outfit_area = value;
    }
    
    planning_unit = "Unset";
    value = PM_GET_OBJDATA(support,0,Planning_Unit);
    if(ISSTRING(value)){
        planning_unit = value;
    }

    surface_treatment = "Unset";
    value = PM_GET_OBJDATA(support,0,Surface_Treatment);
    if(ISSTRING(value)){
        surface_treatment = value;
    }

    support_weight = "0.0";
    value = PM_GET_OBJDATA(support,0,MMT_TAG_MASS);
    if(ISSTRING(value)){
        support_weight = value;
    }
    
    support_name = PM_GET_OBJDATA(support,0,MMT_TAG_OBJNAME);       
    for(i=0;i<mto_no;i=i+1;){
        put_2darray(report,row_number,0,block);
        put_2darray(report,row_number,1,outfit_area);
        put_2darray(report,row_number,2,planning_unit);        
        put_2darray(report,row_number,3,support_name);
        
        descriptin = get_2darray(mto_info,i,2);    
        put_2darray(report,row_number,4,descriptin);          
        put_2darray(report,row_number,5,surface_treatment);
        put_2darray(report,row_number,6,"1");
        put_2darray(report,row_number,7,"pcs");

        mass = String_To_Float(support_weight);
        S_PRINTF(support_weight,"%.2f",mass);
        put_2darray(report,row_number,8,support_weight);
        A_PUT(supports,row_number,support);

        part_id = get_2darray(mto_info,i,1);
        put_2darray(parts,row_number,0,item_no);
        put_2darray(parts,row_number,1,part_id); 
        row_number = row_number + 1;                        
    }  
    free_2darray(mto_info);
    return(0);
} 

get_part_length(part)
{
    obj_type = PM_GET_OBJDATA(part,0,MMT_TAG_OBJTYPE);
    if(obj_type == "5"){
        len = PM_GET_OBJDATA(part,0,MMT_TAG_LENGTH);
        if(ISSTRING(len)){
            length = "";
            S_PRINTF(length,"%.0f",String_To_Float(len));
        }
        else{
            length = "1";
        }
    }
    else{
        length = "1";
    }
    return(length);
}

get_part_description(part)
{
    description = "";
    part_id = PM_GET_OBJDATA(part,0,MMT_TAG_PARTID);
    part_item = PM_GET_OBJDATA(part,0,Part_Number);   
    if(ISINT(part_item)){
        sequ = "2";
    }
    else{
        sequ = HEAD(part_item,1);
    }

    /*说明*/ 
    part_size = "";
    if(sequ == "1" | sequ == "2"){
        length_s = PM_GET_OBJDATA(part,0,MMT_TAG_LENGTH);     
        dd  = DM_PARTID_DATA(part_id,"DD");        
        part_size = dd;
    }    
    else if(sequ == "3"){
        length_s = PM_GET_OBJDATA(part,0,MMT_TAG_PLATE_MINWIDTH);
        length = String_To_Float(length_s);
        S_PRINTF(length_s,"%.0f",length);
        width_s  = PM_GET_OBJDATA(part,0,MMT_TAG_PLATE_MINHEIGHT);
        width = String_To_Float(width_s);
        S_PRINTF(width_s,"%.0f",width);      
        hight_s  = DM_PARTID_DATA(part_id,"D31"); 
        hight = String_To_Float(hight_s);
        S_PRINTF(hight_s,"%.0f",hight); 
        pad_type = PM_GET_OBJDATA(part,0,PadType); 
        if(!ISSTRING(pad_type)){
            pad_type = "A";
        }
         
        if(pad_type == "A"){        
            part_size = length_s + "X" + width_s + "X" + hight_s + " R15";
        }
        else{
            part_size = "D" + width_s + "X" + hight_s;
        }
    }
    else{        
        part_size = DM_PARTID_DATA(part_id,"DD");
    }      
   
    /*部件名*/
    if(sequ == "1"){
        part_description = "角钢";
    }
    else if(sequ == "2"){          
        part_description = "扁钢";
    }     
    else if(sequ == "3"){          
        part_description = "钢垫板";
    } 
    else if(sequ == "4"){          
        part_description = "螺栓";
    } 
    else if(sequ == "5"){          
        part_description = "螺母";
    } 
    else if(sequ == "6"){          
        part_description = "平垫片";
    } 
    else if(sequ == "7"){          
        part_description = "弹簧垫圈";
    }           
    else{
        part_description = "";
    }           
    description = part_description + " " + part_size;
    return(description);
}

/*
**将全局变量object_prod_info中保存的生产信息显示到列表中；
**根据全局变量Grid_SortColumn，Grid_SortDirection保存的信息对显示列表进行排序；
*/
publish_model_info()
{
	/* 将报表信息显示到窗口中 */	
	W_SET_WINDOW_ARGS(DisplayGrid, W_LISTW_ROW, 0);
	W_SET_WINDOW_ARGS(DisplayGrid, W_LISTW_DELETEROWS, -1); 
	for (i = 0; i < Report_Row_Number; i = i + 1;){
		W_SET_WINDOW_ARGS(DisplayGrid, W_LISTW_ROW, 0);
		W_SET_WINDOW_ARGS(DisplayGrid, W_LISTW_INSERTROWS, 1);
		for ( j = 0; j < Report_Column_Number; j = j + 1;){
			Value = get_2darray(Report_Info,i,j);
			if (ISSTRING(Value)){
				W_SET_WINDOW_ARGS(DisplayGrid, W_LISTW_ROW, 0, W_LISTW_COLUMN, j, W_LISTW_STRING, Value);
			}
		}		
		W_SET_WINDOW_ARGS(DisplayGrid, W_LISTW_ITEMID, i);		
	}
	
	W_SET_WINDOW_ARGS(DisplayGrid, W_LISTW_ROW, 1);
	
	/* 自动调整列宽度 Adjust the width of column automatically*/
	for (i=0; i < Report_Column_Number; i = i + 1;){
		W_SET_WINDOW_ARGS(DisplayGrid, W_LISTW_COLUMN, i, W_LISTW_COLUMNWIDTH, -1);
	}
	
	/* 对生产信息列表进行排序 */
	W_SET_WINDOW_ARGS(DisplayGrid, W_LISTW_COLUMN, Grid_SortColumn, W_LISTW_SORT, Grid_SortDirection);
}
